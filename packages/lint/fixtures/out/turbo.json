{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".svelte-kit/**", "dist/**"]
    },
    "check:format": {
      "dependsOn": ["transit"]
    },
    "check:lint": {
      "dependsOn": ["transit"]
    },
    "check:test": {},
    "check:types": {
      "dependsOn": ["transit"]
    },
    "fix:format": {
      "dependsOn": ["transit"]
    },
    "fix:lint": {
      "dependsOn": ["transit"]
    }
  }
}
