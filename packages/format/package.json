{
  "name": "@phsd/format",
  "type": "module",
  "version": "0.0.1",
  "exports": {
    "./prettier": "./prettier.config.js"
  },
  "scripts": {
    "check:format": "prettier --check .",
    "check:lint": "eslint .",
