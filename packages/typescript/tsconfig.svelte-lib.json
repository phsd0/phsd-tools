{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.svelte.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "${configDir}/src/**/*.js",
    "${configDir}/src/**/*.ts",
    "${configDir}/src/**/*.svelte",
    "${configDir}/tests/**/*.js",
    "${configDir}/tests/**/*.ts",
    "${configDir}/tests/**/*.svelte"
  ]
}
