{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "outDir": "${configDir}/dist",
    "sourceMap": true
  },
  "include": ["${configDir}/**/*.js", "${configDir}/**/*.ts"]
}
